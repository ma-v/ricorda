<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-6 mt-4">
      <%= simple_form_for(memory) do |f| %>
      <%= f.simple_fields_for :cultural_good do |cultural_good_form| %>
          <%= cultural_good_form.input :title %>
          <ul class="suggestions">
          </ul>
          <%= cultural_good_form.simple_fields_for :creator do |creator_form| %>
              <%= creator_form.input :name %>
          <% end %>
          <%= cultural_good_form.input :cultural_type, collection: ["Exhibition", "Cinema", "Book", "Comic", "Stand-up", "Theatre", "Opera", "Dancing", "Concert", "TV Show", "Documentary"], include_blank: false %>
          <%= cultural_good_form.input :thematic %>
      <% end %>
      <%= f.simple_fields_for :venue do |venue_form| %>
              <%= venue_form.input :name %>
          <% end %>
      <%= f.input :date, as: :date, html5: true %>
      <%= f.input :rating, collection: ["1", "2", "3", "4", "5"], include_blank: false %>
      <%= f.input :review, as: :text %>
      <button class="btn button"><% f.button :submit %>Record a Memory</button>
      <% end %>
    </div>
  </div>
</div>